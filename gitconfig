[mergetool "diffconflicts"]
	cmd = diffconflicts /home/lnara002/software/vim/vim74/postinstall/bin/vim $BASE $LOCAL $REMOTE $MERGED
	trustExitCode = true
	keepBackup = false
[mergetool "splice"]
