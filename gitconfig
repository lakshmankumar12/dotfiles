	trustExitCode = true
	keepBackup = false
[mergetool "mymeld"]
    cmd = meld "$LOCAL" "$BASE" "$REMOTE" --auto-merge --diff $BASE $MERGED
[mergetool "p4merge"]
    cmd = p4merge "$BASE" "$LOCAL" "$REMOTE" "$MERGED"
    keepTemporaries = false
    trustExitCode = false
    keepBackup = false
